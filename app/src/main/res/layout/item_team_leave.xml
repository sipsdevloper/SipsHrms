<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/ll_main_view"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:layout_marginBottom="5dp"

            android:background="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"

            android:orientation="vertical">



            <TextView
                android:id="@+id/tv_emp_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="18dp"
                android:padding="1dp"
                android:maxLines="4"
                android:text="" />
            <TextView
                android:id="@+id/tv_emp_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="18dp"
                android:padding="1dp"
                android:visibility="gone"
                android:maxLines="4"
                android:text="" />
            <TextView
                android:id="@+id/leavetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="18dp"
                android:padding="1dp"
                android:maxLines="4"
                android:text="sicknessReason" />
            <TextView
                android:id="@+id/leaveid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="18dp"
                android:padding="1dp"
                android:visibility="gone"
                android:maxLines="4"
                android:text="sicknessReason" />
            <TextView
                android:id="@+id/reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textSize="15dp"
                android:padding="1dp"
                android:maxLines="4"
                android:text="sicknessReason" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fromDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textSize="14dp"
                    android:text="1/1/2014" />

                <TextView
                    android:id="@+id/toDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textSize="14dp"
                    android:text="2/8/2014" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fromShift"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textSize="14dp"
                    android:text="1/1/2014" />

                <TextView
                    android:id="@+id/toShift"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textSize="14dp"
                    android:text="2/8/2014" />
            </LinearLayout>




        </LinearLayout>
        <TextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="12dp"
            android:visibility="gone"
            android:text="Pending" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_btview"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_reject"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textSize="14dp"
            android:layout_margin="2dp"
            android:text="REJECT" />

        <Button
            android:id="@+id/bt_approve"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:layout_margin="2dp"
            android:textSize="14dp"
            android:text="APPROVE" />
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>
