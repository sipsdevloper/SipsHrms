<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_main_layout"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:background="@android:color/background_light"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/akrobatbold"
                android:text=" MARK ATTENDANCE "
                android:textColor="@color/colorAccentdark"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/toolbar"
            android:background="#c7c7c7" />


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">


    <Button
        android:id="@+id/imageButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_green"
        android:text="PUNCH IN"
        android:textSize="32sp"
        android:textColor="@color/white"/>



    <Button
        android:id="@+id/imageButton2"
        android:layout_width="248dp"
        android:layout_height="248dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_red"
        android:text="PUNCH OUT"
        android:textSize="32sp"
        android:textColor="@color/white" />



</RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:textSize="18sp"
        android:id="@+id/tv_intime"
        android:gravity="center">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:textSize="18sp"
        android:id="@+id/tv_outtime"
        android:gravity="center">


    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@color/colorPrimary"
        android:id="@+id/uploadimage"
        android:text="Click to upload Image"
        android:textColor="@color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="18sp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:id="@+id/tv_checkimgempty"
        android:visibility="gone"
        android:text="Your Image"
        android:textSize="18sp"
        android:gravity="center"/>
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:minHeight="50dp"
        android:id="@+id/imgpreview"
        android:textSize="18sp"
        android:gravity="center">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:text="Location "
        android:textSize="18sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawable="@drawable/ic_location_white"
        android:gravity="center"
        >

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:id="@+id/current_address"
        android:text=""
        android:textSize="18sp"
        android:gravity="center">

    </TextView>


</LinearLayout>
    </LinearLayout>
</ScrollView>
